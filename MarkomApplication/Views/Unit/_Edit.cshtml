@model Markom.ViewModel.UnitViewModel

@Scripts.Render("~/bundles/jqueryval")



@using (Html.BeginForm("Edit", "Unit", FormMethod.Post, new { id = "form-edit", name = "form-edit" }))
{
    @Html.AntiForgeryToken()
    <style>
        .form-control {
            display: inline
        }
    </style>

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="form-group">
            <div class="col-md-offset-1">
                * Unit Code
                @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1">
                * Unit Name
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="col-md-offset-3">
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger " })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-1">
                 Description
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-offset-3">
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>

        </div>





        <div class="form-group">
            <div class="col-md-offset-7">
                <input type="submit" value="Update" class="btn btn-primary" />
                <button type="button" class="btn btn-warning btn-batal">Cancel</button>

            </div>
        </div>
    </div>
}


<script type="text/javascript">


    $("#form-edit").submit(function () {

        $.ajax({
            url: this.action,
            type: this.method,
            data: $(this).serialize(),
            success: function (result) {

                if (result.success) {
                    var notif = '@Session["EditCode"].ToString()';
                    //alert("Save Successfull!");
                    $(".modal").modal("hide");
                    GetList();
                    $("#notif").html("<b>Data Updated!!!</b> Data Unit has been updated!");

                }

                else {

                    alert(result.message);
                }
            }
        });
        return false;
    });

    $(".btn-batal").on("click", function () {
        $(".modal").modal("hide");

    });
</script>




